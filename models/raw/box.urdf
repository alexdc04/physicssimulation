<robot name="myfirst">

    <material name = "red">
        <color rgba=".8 0 0 1"/>
    </material>

    <material name = "clear">
        <color rgba="1 1 1 .5"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
        </inertial>
    </link>

    <link name="arm_link">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
            <origin xyz="0 0 -0.1" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.1"/>
            </geometry>
            <origin xyz="0 0 -0.1" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
        </inertial>
    </link>

    <joint name="arm_joint" type="revolute">
        <parent link="base_link"/>
        <child link="arm_link"/>
        <axis xyz="1.0 0.0 0.0"/>
        <limit lower="-1.25" upper="1.25" effort="0.0" velocity="0.0"/>
    </joint>

/</robot>